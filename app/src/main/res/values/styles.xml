<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsMenuTextViewStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SettingsMenuBackTextViewStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:text">@string/main_menu_settings</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="SearchMenuTextViewStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:text">@string/main_menu_search</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">textStart</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="drawableTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="TrackName">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackArtist">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="NothingFound">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">100dp</item>
        <item name="android:src">@drawable/nothing_found</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SomethingWentWrong">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">100dp</item>
        <item name="android:src">@drawable/something_went_wrong</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">236dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RefreshErrorButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">348dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/refresh</item>
    </style>

    <style name="YouSearchTextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/you_search</item>
    </style>

    <style name="ClearHistoryButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/clear_history</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="AudioplayerViews">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="AudioplayerViewsValues">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="MediaMenuTextViewStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:text">@string/media_menu_search</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MediaMenuTabLayoutStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="tabIndicatorColor">@color/dark</item>
        <item name="tabTextColor">@color/dark</item>
        <item name="tabRippleColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PlaylistBottomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:text">@string/new_playlist</item>
    </style>

    <style name="PlaylistAndFavoritesImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">106dp</item>
        <item name="android:src">@drawable/nothing_found</item>
    </style>

    <style name="PlaylistAndFavoritesTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">242dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/empty_favorites</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistAndFavoritesBackgroundStyle">
        <item name="android:background">@color/white</item>
    </style>


</resources>