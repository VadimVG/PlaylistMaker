<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:theme="@style/BaseTheme"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/app_name"
        android:textSize="22sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btSearch"
            style="@style/MainMenuButtonStyle"
            android:text="@string/main_menu_search"
            app:cornerRadius="@dimen/cornerRadius"
            app:icon="@drawable/ic_main_menu_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/iconPadding"
            app:iconTint="@color/dark" />


        <Button
            android:id="@+id/btMedia"
            style="@style/MainMenuButtonStyle"
            android:text="@string/main_menu_media"
            app:cornerRadius="@dimen/cornerRadius"
            app:icon="@drawable/ic_main_menu_media"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/iconPadding"
            app:iconTint="@color/dark" />

        <Button
            android:id="@+id/btSettings"
            style="@style/MainMenuButtonStyle"
            android:layout_width="match_parent"
            android:text="@string/main_menu_settings"
            app:cornerRadius="@dimen/cornerRadius"
            app:icon="@drawable/ic_main_menu_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/iconPadding"
            app:iconTint="@color/dark" />

    </LinearLayout>

</LinearLayout>