<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PlaylistAndFavoritesBackgroundStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/playlistBottom"
        style="@style/PlaylistBottomStyle"
        android:visibility="visible"
    />

    <ImageView
        android:id="@+id/playlistsImage"
        style="@style/PlaylistAndFavoritesImageStyle"
        android:visibility="visible"
    />

    <TextView
        android:id="@+id/playlistsText"
        style="@style/PlaylistAndFavoritesTextStyle"
        android:gravity="center"
        android:text="@string/empty_playlists"
        android:visibility="visible"
        />
</FrameLayout>