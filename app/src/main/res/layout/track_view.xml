<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginEnd="19dp"
    android:layout_height="61dp">

    <ImageView
        android:id="@+id/trackLogo"
        android:layout_width="@dimen/layout_width_height"
        android:layout_height="@dimen/layout_width_height"
        android:layout_marginStart="@dimen/layout_marginStart_search"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="66dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            style="@style/TrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Smells Like Teen Spirit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trackArtist"
                style="@style/TrackArtist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1"
                tools:text="Nirvana" />

            <TextView
                style="@style/TrackArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/layout_marginHorizontal"
                android:text="â€¢" />

            <TextView
                android:id="@+id/trackDuration"
                style="@style/TrackArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5:01" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:src="@drawable/ic_arrow_forward" />
</FrameLayout>