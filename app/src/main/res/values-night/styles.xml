<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconTint">@color/dark</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsMenuTextViewStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsMenuImageButtonStyle">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="SettingsMenuBackTextViewStyle">
        <item name="android:background">@color/dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:text">@string/main_menu_settings</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>



    <style name="SettingsMenuLinearLayoutStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SearchMenuTextViewStyle">
        <item name="android:background">@color/dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:text">@string/main_menu_search</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="drawableLeftCompat">@drawable/ic_setting_menu_back</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">textStart</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="drawableTint">@color/dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dark</item>
        <item name="android:shadowRadius">0</item>
    </style>

</resources>